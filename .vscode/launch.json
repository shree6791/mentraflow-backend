{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--log-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true,
            "justMyCode": false,
            "env": {
                "DEBUG": "true"
            },
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}"
        }
    ]
}