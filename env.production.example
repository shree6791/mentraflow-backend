# =============================================================================
# MentraFlow Backend - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and update with your production values
# DO NOT commit .env.production to git!

# =============================================================================
# REQUIRED: External Service Credentials
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-production-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# PostgreSQL Database (from DigitalOcean Managed Database)
# Format: postgresql+asyncpg://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database?sslmode=require

# Qdrant Vector Database (Qdrant Cloud)
QDRANT_URL=https://your-cluster-id.region.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_PREFIX=mentraflow

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Host & Port
# HOST: 0.0.0.0 (all interfaces) for production
# PORT: Use PORT env var from App Platform (default: 8080)
HOST=0.0.0.0
PORT=8080

# CORS Origins (comma-separated, no spaces)
# Update with your production frontend domain
BACKEND_CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

PROJECT_NAME=MentraFlow API
VERSION=0.1.0
API_V1_STR=/api/v1

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Debug mode - MUST be false in production
DEBUG=false

# Auto-create tables - MUST be false in production (use Alembic migrations)
AUTO_CREATE_TABLES=false

# DROP_AND_RECREATE settings - MUST be false in production
DROP_AND_RECREATE_TABLES=false
DROP_AND_RECREATE_COLLECTIONS=false

# =============================================================================
# LANGCHAIN SETTINGS
# =============================================================================

# Disable LangSmith tracing (recommended for production unless you need it)
LANGCHAIN_TRACING_V2=false

