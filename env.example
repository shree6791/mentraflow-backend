# Application Settings
PROJECT_NAME=MentraFlow API
VERSION=0.1.0
API_V1_STR=/api/v1

# Database Configuration (PostgreSQL)
# Format: postgresql+asyncpg://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database?sslmode=require

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # For LLM/chat operations (StudyChatAgent, FlashcardAgent, etc.)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # For embeddings (1536 dimensions, $0.02/1M tokens)

# Qdrant Vector Database Configuration
QDRANT_URL=https://47e4437c-84a3-41b3-bfc0-4c9275305d66.us-west-1-0.aws.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_PREFIX=mentraflow

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Auto-Creation (Development Only)
# Set to 'true' to automatically create tables on startup (useful for dev/testing)
# In production, use Alembic migrations instead: make migrate
AUTO_CREATE_TABLES=false

# Database Drop and Recreate (Development Only - USE WITH CAUTION!)
# Set to 'true' to DROP ALL TABLES and recreate them on startup
# WARNING: This will DELETE ALL DATA in your database!
# Only use in development when you want a fresh start for testing
# In production, NEVER set this to true!
DROP_AND_RECREATE_TABLES=false
