# =============================================================================
# MentraFlow Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# cp env.example .env

# =============================================================================
# REQUIRED: External Service Credentials
# =============================================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# PostgreSQL Database
# Format: postgresql+asyncpg://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database?sslmode=require

# Qdrant Vector Database
QDRANT_URL=https://your-cluster-id.region.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_PREFIX=mentraflow

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Host & Port
# HOST: 127.0.0.1 (local-only) or 0.0.0.0 (all interfaces)
# PORT: Server port (default: 8000)
HOST=127.0.0.1
PORT=8000

# CORS Origins (comma-separated string, no spaces)
# Example: http://localhost:3000,http://localhost:8000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

PROJECT_NAME=MentraFlow API
VERSION=0.1.0
API_V1_STR=/api/v1

# =============================================================================
# LANGCHAIN SETTINGS
# =============================================================================

# LangSmith Tracing (optional)
# Set to false to disable LangSmith tracing and avoid Python 3.12 compatibility issues
# If you want to use LangSmith, set LANGCHAIN_API_KEY and LANGCHAIN_TRACING_V2=true
LANGCHAIN_TRACING_V2=false

# =============================================================================
# DEVELOPMENT & DEBUG SETTINGS
# =============================================================================
# ⚠️  These settings are for DEVELOPMENT ONLY - set to false in production!

# Debug Mode
# true: Verbose logging, FastAPI debug mode, SQL query logging
# false: Production mode (recommended)
DEBUG=false

# Database Auto-Creation
# true: Auto-create tables on startup (dev/testing only)
# false: Use Alembic migrations (production)
AUTO_CREATE_TABLES=false

# Database Drop & Recreate (⚠️  DANGEROUS - Development Only!)
# true: DROP ALL TABLES and recreate (DELETES ALL DATA!)
# false: Normal operation
# ⚠️  NEVER set to true in production!
DROP_AND_RECREATE_TABLES=false

# Qdrant Collections Drop & Recreate (⚠️  DANGEROUS - Development Only!)
# true: DROP ALL COLLECTIONS and recreate (DELETES ALL VECTOR DATA!)
# false: Normal operation (collections created if missing)
# ⚠️  NEVER set to true in production!
DROP_AND_RECREATE_COLLECTIONS=false
